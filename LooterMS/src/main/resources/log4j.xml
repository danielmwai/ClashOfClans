<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%5p %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] (%c:%L) - %m%n" />
        </layout>
    </appender>

    <appender name="CityCache_appender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="./logs/farmCache.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
        <layout class="org.apache.log4j.PatternLayout">
            <!--
                    <param name="ConversionPattern" value="[%d{MMdd HH:mm:ss SSS\} %-5p]
                    [%t] %c{3\} - %m%n" />
            -->
            <param name="ConversionPattern"
                   value="%5p %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] (%c:%L) - %m%n" />
        </layout>
    </appender>
    <logger name="com.bw" additivity="false">
        <level value="debug" />
        <appender-ref ref="CityCache_appender" />
    </logger>
    <logger name="com.danga.MemCached" additivity="false">
        <level value="info" />
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="org.springframework" additivity="false">
        <level value="ALL" />
        <appender-ref ref="STDOUT" />
    </logger>
        
    <logger name="org.springframework.jdbc.core.JdbcTemplate">
        <level value="DEBUG" />
    </logger>

    <logger name="org.springframework.jdbc.core.StatementCreatorUtils">
        <level value="TRACE" />
    </logger>
    <root>
        <level value="info"></level>
        <appender-ref ref="STDOUT" />
    </root>
</log4j:configuration>   
